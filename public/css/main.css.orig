html{
    font-size: clamp(12px, 1.5vw, 20px);
    line-height: 1.5rem;
}

body{
    font-family: "Noto Sans", serif;
    font-weight: 300;
    color: #a8a8aa;
    background-color: #0c1326;
    margin-left: auto;
    margin-right: auto;
}

h1, h2, h3, h4{
    font-family: "Montserrat", serif;
    font-optical-sizing: auto;
    font-weight: 500;
    font-style: normal;
    color: #e7a38b;
    font-weight: 500;
}

h1{
    font-size: clamp(1.38rem, 1vh + 1,2rem, 2.61rem);
    margin-bottom: 2.61rem;
}

h2{
    font-size: clamp(1.2rem, 1vh + 1.2rem , 2.23rem);
    margin-bottom: 2.23rem;
}

h3{
    font-size: clamp(1rem, 1vh + 1rem, 1.38rem);
    margin-bottom: 1.38rem;
}

h4{
    font-size: 1rem;
    margin-bottom: 0.81rem;
}

a{
    text-decoration: none;
    color: #e7a38b;
}

a:hover{
    color: red;
}

main{
    display: flex;
    justify-content: flex-start;
}

main #left-container{
    flex-basis: 35%;
}

main #right-container{
    flex-basis: 55%;
}

/* menu styles */

header {
    text-align: right;
}


header.placeholder{
    display: block;
    opacity: 0;
}

header.left{
    padding-right: 20px;
    white-space: nowrap;
}

nav{
    display: block;
    align-items: flex-start;
    padding-right: 20px;
    font-size: .75rem;
    flex-wrap: nowrap;
    text-align: right;
}

nav.top-nav > div.logo{
    vertical-align:baseline;
}

#pages-menu, .posts-menu{
    list-style: none;
    line-height: 1.5rem;
    font-weight: 200;
    text-transform: uppercase;
}

.posts-menu{
    text-transform: none;
}

.posts-menu h3{
    margin-top: 3rem;
}

#pages-menu h4, .posts-menu h4{
    font-weight: 300;
    margin-top: 0.5rem;
    line-height: 1rem;
}

#pages-menu a{
    display:block;
    text-decoration: none;
    text-align: right;
    color: #e7a38b;
}

.posts-menu li{
    display: inline-block;
    margin-bottom: 0.6rem;
}

.posts-menu a{
    margin-bottom: 1rem;
    text-decoration: none;
    color: #e7a38b;
}

#left-container{
    display: block;
    width: 25%;
    max-width: 430px;
}

.right-container{
    padding: 0px 20px;
}

.footer-wrapper{
    display: flex;
    justify-content: center;
    opacity: 1;

}

footer{
    border-top: 1px solid #292b63;
    padding: 0.61rem 4.22rem 0.61rem 4.22rem;
}

footer > h4{
    font-weight: 300;
}

p{
    margin-bottom: 1.5rem;
}

