@media screen and (max-width: 1199px){

}

@media screen and (min-width: 768px){
    header.left{
        display: block;
    }
}


@media screen and (max-width: 767px){
    header.placeholder{
        display: none;
    }
    #left-container{
        display: none;
    }
    main > div.right-container{
        flex-basis: 100%;
    }
}

